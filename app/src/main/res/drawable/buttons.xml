<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:startColor="@color/colorDarkGrey" />
            <gradient android:angle="-90" android:startColor="@color/colorGrey" android:endColor="@color/colorLightGrey"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorGrey" />
            <solid android:startColor="@color/colorDarkGrey"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:startColor="@color/colorDarkGrey" />
            <gradient android:angle="-90" android:startColor="@color/colorLightGrey" android:endColor="@color/colorGrey" />
        </shape>
    </item>
</selector>